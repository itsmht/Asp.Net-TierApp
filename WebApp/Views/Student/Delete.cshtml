@model BLL.BEnt.StudentModel
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
<h2 style="color:red;">Are you sure to delete this entity?</h2>

<form action="/Student/Delete" method="post">
    <input type="hidden" name="student_id" value="@Model.student_id" />
    <div class="form-group">
        <label for="exampleFormControlInput1">Name:</label>
        <input type="text" class="form-control" readonly value="@Model.name" id="exampleFormControlInput1" name="name" placeholder="Enter Student Name" />
    </div>
    <div class="form-group">
        <label for="email">Email:</label>

        <input type="text" class="form-control" readonly value="@Model.email" id="email" name="email" placeholder="Enter Email" />
    </div>
    <div class="form-group">
        <label for="cgpa">CGPA:</label>

        <input type="text" class="form-control" readonly value="@Model.cgpa" id="cgpa" name="cgpa" placeholder="CGPA" />
    </div>
    <div class="form-group">
        <label for="department">Department</label><br />

        <select class="form-control" form-control form-control-lg id="department" name="department">
            <option value="@Model.department" selected>@Model.department</option>
            
        </select>

    </div>
    <div class="form-group">

        <label for="dob">Date Of Birth</label><br />
        <input class="form-control" value="@Model.dob" type="date" id="dob" name="dob" />
    </div>
    <div class="form-group">
        <button class="alert-danger btn-round" type="submit">Edit</button>
    </div>

</form>
